
@{
    ViewData["Title"] = "GetStakeHolder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="row">


            <div class="col-md-12">
                <div class="table-responsive">


                    <table id="mytable" class="table table-bordred table-striped">

                        <thead>
                        <th>Account ID</th>
                        <th>Company ID</th>
                        <th>Market Salary</th>
                        <th>Salary</th>
                        <th>Job</th>
                        <th>Name in company</th>
                        <th>Image </th>

                        </thead>
                        <tbody>

                            @foreach (var stakeHolder in ViewData["StakeHolders"] as IList<StakeHolderViewModel>)
                            {
                            <tr>
                                <td>@stakeHolder.AccountId</td>
                                <td>@stakeHolder.CompanyId</td>
                                <td>@stakeHolder.ShmarketSalary</td>
                                <td>@stakeHolder.Shsalary</td>
                                <td>@stakeHolder.Shjob</td>
                                <td>@stakeHolder.ShnameForCompany</td>
                                <td><img src=" @stakeHolder.Shimage" width="50" height="50"></td>

                            </tr>

                            }
                        </tbody>

                    </table>

                    <div class="clearfix"></div>
                    <ul class="pagination pull-right">
                        <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                    </ul>

                </div>

            </div>
        </div>
    </div>



