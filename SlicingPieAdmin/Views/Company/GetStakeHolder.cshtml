
@{
    ViewData["Title"] = "GetStakeHolder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Stake Holder</h1>

<div class="container">
    <div class="row">


        <div class="col-md-12">
            <div class="table-responsive">


                <table id="mytable" class="table table-bordred table-striped">

                    <thead>
                    <th>Name</th>
                    <th>Job</th>
                    <th>Image</th>
                    <th>Slice Asset</th>

                    </thead>
                    <tbody>

                        @foreach (var stakeholders in ViewData["StakeHolders"] as IList<StakeHolderInCompany>)
                        {
                            <tr>
                                <td>@stakeholders.ShName</td>
                                <td>@stakeholders.ShJob</td>
                                <td><img src=@stakeholders.ShImage width="50" height="50"/></td>
                                <td>@stakeholders.SliceAssets</td>
           
                            </tr>

                        }
                        
                    </tbody>

                </table>

            </div>
        </div>
    </div>





